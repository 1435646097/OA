
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/themes/metro/easyui.css" rel="stylesheet" />
    <link href="~/Content/themes/icon.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.easyui.min.js"></script>
    <script src="~/Scripts/easyui-lang-zh_CN.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <title>Index</title>
    <script>
        $(function () {
            $('#addIframe').css('display', 'none');
            loadData();
        });
        //加载表格数据
        function loadData() {
            $('#tt').datagrid({
                url: '/RoleInfo/GetRoleInfo',
                title: '角色数据表格',
                width: 700,
                height: 400,
                fitColumns: true, //列自适应
                nowrap: false,
                idField: 'ID',//主键列的列明
                loadMsg: '正在加载用户的信息...',
                pagination: true,//是否有分页
                singleSelect: false,//是否单行选择
                pageSize: 5,//页大小，一页多少条数据
                pageNumber: 1,//当前页，默认的
                pageList: [5, 10, 15],
                queryParams: {},//往后台传递参数
                columns: [[//c.UserName, c.UserPass, c.Email, c.RegTime
                    { field: 'ck', checkbox: true, align: 'left', width: 50 },
                    { field: 'id', title: '编号', width: 80 },
                    { field: 'name', title: '姓名', width: 120 },
                    {
                        field: 'subTime', title: '添加时间', width: 120,
                        formatter: function (value, row, index) {
                            return (eval(value.replace(/\/Date\((\d+)\)\//gi, "new Date($1)")).toLocaleDateString());
                        }
                    },
                    { field: 'remark', title: '备注', width: 120 }
                ]],
                toolbar: [{
                    id: 'btnAdd',
                    text: '添加角色',
                    iconCls: 'icon-add',
                    handler: function () {
                        addRoleInfo();
                    }
                }],
            });
        }
        //将序列化成json格式后日期(毫秒数)转成日期格式
        function ChangeDateFormat(cellval) {
            var date = new Date(parseInt(cellval.replace("/Date(", "").replace(")/", ""), 10));
            var month = date.getMonth() + 1 < 10 ? "0" + (date.getMonth() + 1) : date.getMonth() + 1;
            var currentDate = date.getDate() < 10 ? "0" + date.getDate() : date.getDate();
            return date.getFullYear() + "-" + month + "-" + currentDate;
        }
        //添加角色
        function addRoleInfo() {
            $('#addIframe').attr('src', '/RoleInfo/ShowAddRoleInfo').css('display', 'block');
            $('#addIframe').dialog({
                title: '添加用户信息',
                collapsible: true,
                maximizable: true,
                resizable: true,
                modal: true,
                width: 600,
                height: 600,
                buttons: [{
                    text: 'Ok',
                    iconCls: 'icon-ok',
                    handler: function () {
                        //提交
                        var childrenWindow = $('#addIframe')[0].contentWindow;
                        childrenWindow.submit();
                    }
                }, {
                    text: 'Cancel',
                    iconCls: 'icon-no',
                    handler: function () {
                        $('#addIframe').dialog('close');
                    }
                }]
            });
        }
        function afterAdd(data) {
            if (data == 'ok') {
                $('#addIframe').dialog('close');
                $('tt').datagrid('reload');
            }
        }
    </script>
</head>
<body>
    <div>
        <table id="tt" style="width: 700px;" title="标题，可以使用代码进行初始化，也可以使用这种属性的方式" iconcls="icon-edit">
        </table>
    </div>
    <iframe id="addIframe" frameborder="0" width="100%" height="100%">
    </iframe>
</body>
</html>
